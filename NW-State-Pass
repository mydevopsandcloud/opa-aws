terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

provider "aws" {
  region                      = "us-west-2"
  skip_credentials_validation = true
  skip_requesting_account_id  = true
  skip_metadata_api_check     = true
  access_key                  = "mock_access_key"
  secret_key                  = "mock_secret_key"
}

# RESOURCE UNDER TEST - PASS
resource "aws_networkfirewall_rule_group" "pass_example" {
  description = "Stateless Rule Group - PASS"
  capacity    = 100
  name        = "pass-example"
  type        = "STATELESS"

  rule_group {
    rules_source {
      stateless_rules_and_custom_actions {
        stateless_rule {
          priority = 1
          rule_definition {
            actions = ["aws:pass"]
            match_attributes {
              source {
                address_definition = "10.0.0.0/24"
              }
              destination {
                address_definition = "192.168.1.0/24"
              }
              protocols = [6]
            }
          }
        }
      }
    }
  }

  tags = {
    Environment = "Test"
    Result      = "PASS"
  }
}
