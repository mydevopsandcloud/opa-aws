resource "aws_kinesis_firehose_delivery_stream" "pass_stream" {
  name        = "pass_stream"
  destination = "s3"

  server_side_encryption {
    enabled  = true
    key_type = "CUSTOMER_MANAGED_CMK"
  }

  kinesis_source_configuration {
    kinesis_stream_arn = "arn:aws:kinesis:us-east-1:123456789012:stream/example"
    role_arn           = "arn:aws:iam::123456789012:role/firehose_role"
  }

  tags = {
    Environment = "prod"
    Owner       = "cloudsec"
  }
}
